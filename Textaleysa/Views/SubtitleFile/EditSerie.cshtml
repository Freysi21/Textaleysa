@model Textaleysa.Models.ViewModel.EditSerieView

@{
    ViewBag.Title = "Breyta skrá";
}

@using (Html.BeginForm("EditFile", "SubtitleFile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>
            @Html.DisplayFor(model => model.title)
            (s @Html.DisplayFor(model => model.season)
            e @Html.DisplayFor(model => model.episode))
            @Html.DisplayFor(model => model.language)
        </h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.content, new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.content)
                @Html.ValidationMessageFor(model => model.content)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
