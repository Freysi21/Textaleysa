@model IEnumerable<PrufaVote.Models.Request>
@{
    ViewBag.Title = "Beiðni";
}

<div class="mycontent">
    <h1>Beiðnir</h1>
    <a href="#!">senda inn nýja beiðni</a>
</div>
<script type="text/html" id="template">
    <tr class="list-group-item request-item">
        <td><span class="qty"></span></td>
        <td data-content="mediaTitle"></td>
        <td data-content="language"></td>
        <td data-content="userName"></td>
        <td class="vote-button">
            <button type="button" id="vote-request">
            Vote 
                <span class="glyphicon glyphicon-thumbs-up">
                </span>
            </button>
        </td>
    </tr>
</script>

<table class="table">
    <tr>
        <th>
            Fjöldi atkvæða
        </th>
        <th>
            Nafn myndefnis
        </th>
        <th>
            Tungumál
        </th>
        <th>
            Hlaðið upp af
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <span class="qty"></span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mediaTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userName)
            </td>
            <td>
                <button type="button" id="vote-request">
                    Vote
                    <span class="glyphicon glyphicon-thumbs-up">
                    </span>
                </button>
            </td>
        </tr>
    }

</table>
