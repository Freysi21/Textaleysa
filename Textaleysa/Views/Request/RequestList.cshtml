@model IEnumerable<Textaleysa.Models.ViewModel.ListRequestViewModel>
<script type="text/javascript" src="~/Scripts/VoteScript.js"></script>

<p>
    @Html.ActionLink("Create New", "CreateRequest")
</p>
<table class="table">
    <tr>
        <th>
            Fjöldi Atkvæða
        </th>
        <th>
            Nafn Myndefnis
        </th>
        <th>
            Tungumál
        </th>
        <th>
            Notandi
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="request-item">
        <td>
            <span class="qty">
            </span>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mediaTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.language)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.userName)
        </td>
        <td>
        <a id="vote-request" href="#!"><span class="glyphicon glyphicon-thumbs-up"/></a>
        </td>
    </tr>
}

</table>

