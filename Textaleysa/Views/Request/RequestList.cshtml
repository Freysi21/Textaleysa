<script type="text/javascript" src="~/Scripts/VoteScript.js"></script>
<div class="row center">
    <div class="col-xs-12 FirstDivOnPage"></div>
</div>
<div class="row center">
    <div class="col-xs-12"><h2>Listi yfir beiðnir um skjátextaskrár</h2></div>
</div>
<div class="row">
    <div class="col-xs-12 SecondDivOnPage"></div>
</div>
<div class="row">
    <table class="table">
        <tr>
            <th>
                Fjöldi atkvæða
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mediaTitle)
            </th>
            <th>
