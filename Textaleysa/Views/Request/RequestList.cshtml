                    @Html.DisplayFor(modelItem => item.language)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.userName)
                </td>
                <td>
                    @Html.ActionLink("Breyta", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Skoða", "Details", new { /* id=item.PrimaryKey */ }) |
