@model IEnumerable<Textaleysa.Models.Request>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fjöldi atkvæða
        </th>
        <th>
            Nafn myndefnis
        </th>
        <th>
            Tungumál
        </th>
        <th>
            Hlaðið upp af
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                <span class="qty"></span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mediaTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userName)
            </td>
            <td>
                <button type="button" id="vote-request">
                    Vote
                    <span class="glyphicon glyphicon-thumbs-up">
                    </span>
                </button>
            </td>
        </tr>
    }
    </table>
